{% extends 'base.html.twig' %}

{% block title %}Mis deudas{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
    body {
        font-family: 'Segoe UI', Roboto, sans-serif;
    }

    .deuda-wrapper {
        max-width: 900px;
        margin: 3em auto;
        padding: 2.5em;
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    }

    .deuda-wrapper h1 {
        font-size: 2em;
        margin-bottom: 1.5em;
        text-align: center;
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1em;
    }

    th, td {
        padding: 0.9em;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f1f1f1;
        font-weight: 600;
        color: #444;
    }

    tr:hover {
        background-color: #f9f9f9;
    }

    td:nth-child(3) {
        font-weight: bold;
        color: #1976d2;
    }

    .no-deudas {
        text-align: center;
        padding: 2em;
        color: #777;
    }

    td {
        color: black;
    }

    @media screen and (max-width: 600px) {
        .deuda-wrapper {
            padding: 1.5em;
            margin: 1.5em auto;
            border-radius: 12px;
        }

        .deuda-wrapper h1 {
            font-size: 1.5em;
            line-height: 1.3;
        }

        table {
            font-size: 0.95em;
        }

        th, td {
            padding: 0.6em;
        }

        .no-deudas {
            padding: 1.5em;
            font-size: 1em;
        }

        table, thead, tbody, th, td, tr {
            display: block;
        }

        thead {
            display: none;
        }

        tr {
            margin-bottom: 1em;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
            padding: 1em;
        }

        td {
            padding: 0.4em 0;
            color: #333;
        }

        td:nth-child(1)::before {
            content: "Deudor: ";
            font-weight: bold;
        }

        td:nth-child(2)::before {
            content: "Acreedor: ";
            font-weight: bold;
        }

        td:nth-child(3)::before {
            content: "Monto: ";
            font-weight: bold;
            color: #1976d2;
        }
    }
</style>

<div class="deuda-wrapper">
    <h1><i class="fas fa-user-minus"></i> Mis deudas</h1>

    <table>
        <thead>
            <tr>
                <th>Deudor</th>
                <th>Acreedor</th>
                <th>Monto</th>
            </tr>
        </thead>
        <tbody>
            {% set miId = usuarioActual.id %}
            {% if deudas[miId] is defined and deudas[miId] is not empty %}
                {% for acreedorId, monto in deudas[miId] %}
                    <tr>
                        <td>{{ usuarios[miId].email }}</td>
                        <td>{{ usuarios[acreedorId].email }}</td>
                        <td>${{ monto|number_format(2, '.', ',') }}</td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="3" class="no-deudas">No ten√©s deudas registradas.</td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <h1><i class="fas fa-user-plus"></i> Me deben</h1>

    <table>
        <thead>
            <tr>
                <th>Deudor</th>
                <th>Acreedor</th>
                <th>Monto</th>
            </tr>
        </thead>
        <tbody>
            {% set tengoAcreencias = false %}
            {% for deudorId, acreedores in deudas %}
                {% for acreedorId, monto in acreedores %}
                    {% if acreedorId == miId %}
                        {% set tengoAcreencias = true %}
                        <tr>
                            <td>{{ usuarios[deudorId].email }}</td>
                            <td>{{ usuarios[acreedorId].email }}</td>
                            <td>${{ monto|number_format(2, '.', ',') }}</td>
                        </tr>
                    {% endif %}
                {% endfor %}
            {% endfor %}

            {% if not tengoAcreencias %}
                <tr>
                    <td colspan="3" class="no-deudas">Nadie te debe plata registrada.</td>
                </tr>
            {% endif %}
        </tbody>
    </table>
</div>
{% endblock %}
