{% extends 'base.html.twig' %}

{% block title %}Registrar compra{% endblock %}

{% block body %}
<!-- Font Awesome para íconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
    body {
        
        font-family: 'Segoe UI', Roboto, sans-serif;
    }

    .form-wrapper {
        max-width: 800px;
        margin: 3em auto;
        padding: 2.5em;
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    }

    .form-wrapper h1 {
        font-size: 2em;
        margin-bottom: 1.5em;
        text-align: center;
        color: #333;
    }

    form > div {
        margin-bottom: 1.2em;
    }

    label {
        display: block;
        margin-bottom: 0.4em;
        font-weight: 600;
        color: #444;
    }

    input, select, textarea {
        width: 100%;
        padding: 0.7em;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 1em;
        background-color: #fdfdfd;
        transition: border-color 0.2s ease;
    }

    input:focus, select:focus, textarea:focus {
        border-color: #1976d2;
        outline: none;
    }

    .producto-form {
        padding: 1em;
        margin-bottom: 1em;
        background-color: #f1f8e9;
        border: 1px solid #c5e1a5;
        border-radius: 12px;
        position: relative;
    }

    .producto-form input{
        width:95%;
    }

    .producto-form::before {
        content: "\f07a"; /* ícono de carrito */
        font-family: "Font Awesome 6 Free";
        font-weight: 900;
        position: absolute;
        top: 12px;
        right: 16px;
        font-size: 1.2em;
        color: #558b2f;
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 2em;
    }

    .btn {
        padding: 0.7em 1.4em;
        font-size: 1em;
        border: none;
        border-radius: 8px;
        background-color: #1976d2;
        color: white;
        cursor: pointer;
        transition: background-color 0.2s ease;
        text-decoration: none;
    }

    .btn:hover {
        background-color: #0d47a1;
    }

    .btn-secondary {
        background-color: #9e9e9e;
    }

    .btn-secondary:hover {
        background-color: #616161;
    }

    .add-product-btn {
        display: inline-block;
        margin-top: 1em;
        background-color: #43a047;
    }

    .add-product-btn:hover {
        background-color: #2e7d32;
    }
    @media screen and (max-width: 600px) {
    .form-wrapper {
        padding: 1.5em;
        margin: 1.5em auto;
        border-radius: 12px;
    }

    .form-wrapper h1 {
        font-size: 1.5em;
        line-height: 1.3;
    }

    input, select, textarea {
        font-size: 1em;
        padding: 0.6em;
    }

    .producto-form {
        padding: 0.8em;
        margin-bottom: 1em;
    }

    .producto-form input {
        width: 90%;
    }

    .producto-form::before {
        top: 8px;
        right: 12px;
        font-size: 1em;
    }

    .form-actions {
        flex-direction: column;
        gap: 1em;
        margin-top: 1.5em;
    }

    .btn,
    .btn-secondary,
    .add-product-btn {
        width: 100%;
        text-align: center;
        font-size: 1em;
        padding: 0.8em;
        margin-top: 0.5em;
    }

    #add-product-btn {
        position: relative;
        margin-top: 1.5em;
    }
}

</style>

<div class="form-wrapper">
    <h1><i class="fas fa-receipt"></i> Registrar compra</h1>

    {{ form_start(form) }}
        {{ form_row(form.nombre) }}
        {{ form_row(form.fecha) }}

        <div id="productos-wrapper" data-prototype="{{ form_widget(form.productos.vars.prototype)|e('html_attr') }}">
            {% for productoForm in form.productos %}
                <div class="producto-form">
                    {{ form_widget(productoForm) }}
                </div>
            {% endfor %}
        </div>

        <button type="submit" class="btn"><i class="fas fa-save"></i> Guardar compra</button>
    {{ form_end(form) }}
    <a href="{{ path('app_compra_index') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver al listado</a>

    <button type="button" id="add-product-btn" class="btn add-product-btn">
        <i class="fas fa-plus-circle"></i> Agregar producto
    </button>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const wrapper = document.querySelector('#productos-wrapper');
    const addButton = document.querySelector('#add-product-btn');
    let index = wrapper.children.length;

    const toggleDescuento = (form) => {
        const checkbox = form.querySelector('[id$="_tieneDescuento"]');
        const descuentoInput = form.querySelector('[id$="_descuento"]');
        const descuentoField = descuentoInput?.closest('div');

        if (checkbox && descuentoField) {
            // Inicializa el estado
            descuentoField.style.display = checkbox.checked ? 'block' : 'none';

            // Reacciona al cambio
            checkbox.addEventListener('change', () => {
                descuentoField.style.display = checkbox.checked ? 'block' : 'none';
            });
        }
    };

    // Aplica a todos los productos renderizados inicialmente
    wrapper.querySelectorAll('.producto-form').forEach(toggleDescuento);

    // Agrega nuevos productos con lógica de descuento
    addButton.addEventListener('click', () => {
        const prototype = wrapper.dataset.prototype;
        const newForm = prototype.replace(/__name__/g, index);
        const div = document.createElement('div');
        div.classList.add('producto-form');
        div.innerHTML = newForm;
        wrapper.appendChild(div);
        toggleDescuento(div);
        index++;
    });
});
</script>


{% endblock %}
