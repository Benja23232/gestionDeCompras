{% extends 'base.html.twig' %}

{% block title %}Historial de compras{% endblock %}

{% block body %}
<!-- Font Awesome para Ã­conos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
    body {
        font-family: 'Segoe UI', Roboto, sans-serif;
    }

    .compra-wrapper {
        max-width: 1000px;
        margin: 3em auto;
        padding: 2.5em;
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    }

    .compra-wrapper h1 {
        font-size: 2em;
        margin-bottom: 1.5em;
        text-align: center;
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 1.5em;
    }

    th, td {
        padding: 0.9em;
        text-align: left;
        border-bottom: 1px solid #ddd;
        vertical-align: top;
    }

    th {
        background-color: #f1f1f1;
        font-weight: 600;
        color: #444;
    }

    tr:hover {
        background-color: #f9f9f9;
    }
    td{
        color:rgb(12, 11, 11);
    }

    td:nth-child(3) {
        color: #1976d2;
        font-weight: 500;
    }

    ul.productos {
        list-style: none;
        padding-left: 0;
        margin: 0.5em 0 0 0;
    }

    ul.productos li {
        margin-bottom: 0.4em;
        padding: 0.4em 0.6em;
        background-color: #f1f8e9;
        border-radius: 8px;
        font-size: 0.95em;
        border: 1px solid #c5e1a5;
    }

    ul.productos li span.descuento {
        color: #43a047;
        font-weight: bold;
        margin-left: 0.5em;
    }

    .btn {
        display: inline-block;
        padding: 0.6em 1.2em;
        font-size: 0.9em;
        border-radius: 8px;
        text-decoration: none;
        color: white;
        background-color: #1976d2;
        transition: background-color 0.2s ease;
        margin-right: 0.5em;
    }

    .btn:hover {
        background-color: #0d47a1;
    }

    .btn-secondary {
        background-color: #9e9e9e;
    }

    .btn-secondary:hover {
        background-color: #616161;
    }

    .btn-create {
        background-color: #43a047;
    }

    .btn-create:hover {
        background-color: #2e7d32;
    }

    .no-records {
        text-align: center;
        padding: 2em;
        color: #777;
    }
    .productos li{
        color:black;
    }
    .id{
        display:none;
    }
    @media screen and (max-width: 600px) {
    .compra-wrapper {
        padding: 1.5em;
        margin: 1.5em auto;
        border-radius: 12px;
    }

    .compra-wrapper h1 {
        font-size: 1.5em;
        line-height: 1.3;
    }

    table,
    thead,
    tbody,
    th,
    td,
    tr {
        display: block;
        width: 100%;
        box-sizing: border-box;
    }

    tr {
        margin-bottom: 1.5em;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        padding: 1em;
    }

    td {
        padding: 0.4em 0;
        color: #030303;
        width: 100%;
    }

    td:nth-child(2)::before {
        content: "Nombre: ";
        font-weight: bold;
    }

    td:nth-child(3)::before {
        content: "Fecha: ";
        font-weight: bold;
        color: #1976d2;
    }

    td:nth-child(4)::before {
        content: "Comprado por: ";
        font-weight: bold;
    }

    td:nth-child(5)::before {
        content: "Productos: ";
        font-weight: bold;
        display: block;
        margin-bottom: 0.3em;
    }

    td:nth-child(6)::before {
        content: "Acciones: ";
        font-weight: bold;
        display: block;
        margin-bottom: 0.3em;
    }

    .btn,
    .btn-secondary {
        display: inline-block;
        width: 48%;
        margin: 0.2em 1%;
        text-align: center;
        font-size: 0.9em;
        padding: 0.6em;
        box-sizing: border-box;
    }

    .btn-create {
        width: 100%;
        margin-top: 1em;
        font-size: 1em;
        padding: 0.8em;
        box-sizing: border-box;
    }

    ul.productos li {
        font-size: 0.9em;
        padding: 0.4em;
        box-sizing: border-box;
    }
}

</style>

<div class="compra-wrapper">
    <h1><i class="fas fa-history"></i> Historial de compras</h1>

    <table>
        <thead>
            <tr>
                <th class="id">ID</th>
                <th>Nombre</th>
                <th>Fecha</th>
                <th>Comprado por</th>
                <th>Productos</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for compra in compras %}
            <tr>
                <td class="id">{{ compra.id }}</td>
                <td>{{ compra.nombre }}</td>
                <td>{{ compra.fecha ? compra.fecha|date('d/m/Y') : '' }}</td>
                <td>{{ compra.comprador.email }}</td>

                <td>
                    <ul class="productos">
                        {% for producto in compra.productos %}
                            <li>
                                {{ producto.nombre }}
                                {% if producto.precio is defined %}
                                    - ${{ producto.precio|number_format(2) }}
                                {% endif %}
                                {% if producto.tieneDescuento and producto.descuento is defined %}
                                    <span class="descuento">(-{{ producto.descuento }}%)</span>
                                {% endif %}
                            </li>
                        {% else %}
                            <li><em>Sin productos</em></li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <a href="{{ path('app_compra_show', {'id': compra.id}) }}" class="btn"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('app_compra_edit', {'id': compra.id}) }}" class="btn btn-secondary"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="no-records">No se encontraron compras registradas.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_compra_new') }}" class="btn btn-create"><i class="fas fa-plus-circle"></i> Registrar nueva compra</a>
</div>
{% endblock %}
