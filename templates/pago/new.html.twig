{% extends 'base.html.twig' %}

{% block title %}Registrar pago{% endblock %}

{% block body %}
<!-- Font Awesome para Ã­conos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
    body {
       /* background: linear-gradient(to right, #e3f2fd, #fce4ec);*/
        font-family: 'Segoe UI', Roboto, sans-serif;
    }

    .form-wrapper {
        max-width: 600px;
        margin: 3em auto;
        padding: 2.5em;
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    }

    .form-wrapper h1 {
        font-size: 2em;
        margin-bottom: 1.5em;
        text-align: center;
        color: #333;
    }

    form > div {
        margin-bottom: 1.2em;
    }

    label {
        display: block;
        margin-bottom: 0.4em;
        font-weight: 600;
        color: #444;
    }

    input, select {
        width: 100%;
        padding: 0.7em;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 1em;
        background-color: #fdfdfd;
        transition: border-color 0.2s ease;
    }

    input:focus, select:focus {
        border-color: #1976d2;
        outline: none;
    }

    input[type="date"] {
        appearance: none;
        -webkit-appearance: none;
        -moz-appearance: none;
        background-color: #fdfdfd;
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 0.7em;
        font-size: 1em;
        color: #333;
        width: 100%;
        transition: border-color 0.2s ease;
    }

    input[type="date"]:focus {
        border-color: #1976d2;
        outline: none;
    }

    input[type="date"]::-webkit-calendar-picker-indicator {
        filter: invert(40%) sepia(100%) saturate(300%) hue-rotate(190deg);
        cursor: pointer;
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 2em;
    }

    .btn {
        padding: 0.7em 1.4em;
        font-size: 1em;
        border: none;
        border-radius: 8px;
        background-color: #1976d2;
        color: white;
        cursor: pointer;
        transition: background-color 0.2s ease;
        text-decoration: none;
    }

    .btn:hover {
        background-color: #0d47a1;
    }

    .btn-secondary {
        background-color: #9e9e9e;
    }

    .btn-secondary:hover {
        background-color: #616161;
    }
    @media screen and (max-width: 600px) {
    .form-wrapper {
        padding: 1.5em;
        margin: 1.5em auto;
        border-radius: 12px;
    }

    .form-wrapper h1 {
        font-size: 1.5em;
        line-height: 1.3;
    }

    input, select {
        font-size: 1em;
        padding: 0.6em;
    }

    input[type="date"] {
        padding: 0.6em;
        font-size: 1em;
    }

    .form-actions {
        flex-direction: column;
        gap: 1em;
        margin-top: 1.5em;
    }
    .btn,
    .btn-secondary {
        width: 100%;
        text-align: center;
        font-size: 1em;
        padding: 0.8em;
        margin-right:5px;
    }
}

</style>

<div class="form-wrapper">
    <h1><i class="fas fa-hand-holding-usd"></i> Registrar pago</h1>

    {{ form_start(form) }}
     
        {{ form_row(form.receptor) }}
        {{ form_row(form.monto) }}
        {{ form_row(form.fecha) }}

        <div class="form-actions">
            <button type="submit" class="btn"><i class="fas fa-check-circle"></i> Guardar pago</button>
        </div>
        <a href="{{ path('app_pago_index') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver al listado</a>
    {{ form_end(form) }}
</div>
{% endblock %}
