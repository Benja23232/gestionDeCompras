{% extends 'base.html.twig' %}

{% block title %}Detalle del pago{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
    body {
        background: linear-gradient(to right, #e3f2fd, #fce4ec);
        font-family: 'Segoe UI', Roboto, sans-serif;
    }

    .pago-wrapper {
        max-width: 700px;
        margin: 3em auto;
        padding: 2em;
        background-color: #fff;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    }

    .pago-wrapper h1 {
        font-size: 2em;
        margin-bottom: 1.5em;
        text-align: center;
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 2em;
    }

    th, td {
        padding: 0.9em;
        text-align: left;
        border-bottom: 1px solid #ddd;
        vertical-align: top;
    }

    th {
        background-color: #f1f1f1;
        font-weight: 600;
        color: #444;
        width: 30%;
    }

    td {
        color: #333;
    }

    .acciones {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 1em;
    }

    .acciones a {
        display: inline-block;
        padding: 0.6em 1.2em;
        background-color: #1976d2;
        color: #fff;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: background-color 0.3s ease;
    }

    .acciones a:hover {
        background-color: #125ea2;
    }

    @media screen and (max-width: 600px) {
        .pago-wrapper {
            padding: 1.5em;
        }

        .pago-wrapper h1 {
            font-size: 1.5em;
        }

        table, thead, tbody, th, td, tr {
            display: block;
        }

        tr {
            margin-bottom: 1em;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
            padding: 1em;
        }

        th {
            background-color: transparent;
            font-weight: bold;
            padding: 0.4em 0;
        }

        td {
            padding: 0.4em 0;
        }

        .acciones {
            flex-direction: column;
            align-items: stretch;
        }
    }
</style>

<div class="pago-wrapper">
    <h1><i class="fas fa-money-check-alt"></i> Detalle del pago</h1>

    <table>
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ pago.id }}</td>
            </tr>
            <tr>
                <th>Monto</th>
                <td>${{ pago.monto|number_format(2, '.', ',') }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ pago.fecha ? pago.fecha|date('d/m/Y H:i') : 'â€”' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="acciones">
        <a href="{{ path('app_pago_index') }}"><i class="fas fa-arrow-left"></i> Volver al listado</a>
        <a href="{{ path('app_pago_edit', {'id': pago.id}) }}"><i class="fas fa-edit"></i> Editar</a>
        {{ include('pago/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
